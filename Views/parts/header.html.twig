<header>
	<nav class="navbar navbar-expand-lg bg-body-tertiary">
		<div class="container-fluid">
			<a class="navbar-brand" href="">Mes annonces</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href="{{ base }}">Accueil</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ base }}/annonces">List des annonces</a>
					</li>
				</ul>
				<ul class="navbar-nav ml-auto mb-2 mb-lg-0">
					{% if session.user is not defined and session.user != true %}
						<li class="nav-item">
							<a class="nav-link" aria-current="page" href="{{base}}/users/login">Connexion</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" aria-current="page" href="{{base}}/users/register">Inscription</a>
						</li>
					{% else %}

						{% if session.user.roles is defined and 'ROLE_ADMIN' in session.user.roles %}
							<li class="nav-item">
								<a class="nav-link" href="{{base}}/admin">Admin</a>
							</li>
						{% endif %}
						<li class="nav-item">
							<a class="nav-link" href="{{base}}/profil">Profil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{base}}/users/logout">Déconnexion</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</div>
	</nav>
</header>
<div class="container">
	{% if session.message is defined %}
		<div class="alert alert-success" role="alert">
			{{ session.message }}
			{% do session.remove('message') %}
		</div>
	{% endif %}
	{% if session.erreur is defined %}
		<div class="erreur">{{ session.erreur }}</div>
		<script>
			// Supprimer la variable erreur après affichage
			setTimeout(function () {
			document.querySelector('.erreur').style.display = 'none';
			}, 3000); // Supprimer après 3 secondes (ajustez la durée selon vos besoins)
		</script>
	{% endif %}
</div>
